{% extends 'base.html.twig' %}
{% block title %}Dunforce Datas{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            {% for data in datas %}
            <tbody>
            <tr class="table-active">
                <td>{{ data.name }}</td>
                <td>{{ data.description |raw }}</td>
                <td>
                    <button type="button" class="btn btn-outline-danger">
                        <a href=" {{ path('delete_organizations', { dataForm : data.name }   ) }} "> SUPPRIMER </a>
                    </button>
                    <button type="button" class="btn btn-outline-success">
                        <a href=" {{ path('update_organizations', { dataForm : data.name }   ) }} "> EDITER </a>
                    </button>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
